Data = [(1,100,"aa",1),(2,200,"bb",1),(2,300,"cc",1),(4,400,"dd",1)]

df = spark.createDataFrame(Data ,['cust_id','income','name','tip'])
--------------------------------------------------------------------------------

 df.write.format("delta")\
         .mode("append")\
         .save("/Volumes/delta_lake_madhu/default/deltavol/dmlsink/") 

